rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY PERMISSIVE RULES FOR DEBUGGING
    // Allow authenticated users full access to test if rules are the issue
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow unauthenticated reads for referral code validation during signup
    match /users/{userId} {
      allow read: if true;
    }
  }
}